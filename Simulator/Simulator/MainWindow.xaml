<Window x:Class="Simulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Panou Control Benzilor" Height="500" Width="350">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10">
            <!-- Butonul principal S0 -->
            <Button x:Name="S0" Content="S0 - Oprire Totală (Aus)" Width="250" Height="40" Margin="0,10"/>

            <!-- Butoanele S1 - S5 -->
            <Button x:Name="S1" Content="S1 - Bandă 1 On" Width="250" Height="40" Margin="0,5"/>
            <Button x:Name="S2" Content="S2 - Bandă 2 On" Width="250" Height="40" Margin="0,5"/>
            <Button x:Name="S3" Content="S3 - Bandă 3 On" Width="250" Height="40" Margin="0,5"/>
            <Button x:Name="S4" Content="S4 - Bandă 4 On" Width="250" Height="40" Margin="0,5"/>
            <Button x:Name="S5" Content="S5 - Bandă 1+2 Oprite" Width="250" Height="40" Margin="0,10"/>

            <!-- Comutatoare S6 - S8 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <StackPanel Margin="5">
                    <TextBlock Text="S6" HorizontalAlignment="Center"/>
                    <ToggleButton x:Name="S6" Width="50" Height="50"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="S7" HorizontalAlignment="Center"/>
                    <ToggleButton x:Name="S7" Width="50" Height="50"/>
                </StackPanel>
                <StackPanel Margin="5">
                    <TextBlock Text="S8" HorizontalAlignment="Center"/>
                    <ToggleButton x:Name="S8" Width="50" Height="50"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
